---
layout: "_layouts/default.twig"
title: "Talks"
id: talks
---

<div class="container" id="talks">
    {% include "_snippets/future_talks.twig" %}

    <h1>
        {{ title }}
        <br>
        <small>Slides, demos and posts</small>
    </h1>

    {% for talk in talks %}
        <div class="card mb-5" id="{{ talk.anchor }}">
            <div class="text-center card-header">
                <h2 class="card-title">
                    <a href="#{{ talk.anchor }}">
                        {{ talk.title }}
                    </a>
                </h2>
            </div>
            <div class="card-body">
                {% if talk.demo_link is defined %}
                    <a href="{{ talk.demo_link }}" class="btn btn-dark btn-sm mt-2 mr-2 mb-2">
                        <em class="fab fa-fw fa-github"></em>
                        See Demo on Github
                    </a>
                {% endif %}

                {% if talk.video_link is defined %}
                    <a href="{{ talk.video_link }}" class="btn btn-danger btn-sm mt-2 mr-2 mb-2">
                        <em class="fab fa-fw fa-youtube"></em>
                        Watch Talk
                    </a>
                {% endif %}

                {% if talk.related_post is defined %}
                    <a href="{{ talk.related_post }}" class="btn btn-info btn-sm mt-2 mr-2 mb-2">
                        <em class="fas fa-fw fa-book"></em>
                        Read Post
                    </a>
                {% endif %}

                {% if talk.events|length > 1 %}
                    <p class="mt-3">
                        <strong>Presented at</strong>
                    </p>

                    <ul>
                        {% for event in talk.events %}
                            <li>
                                <a href="{{ event.url }}" class="mt-2 mb-2">
                                    {{ event.name }}
                                </a>

                                @ {{ event.location }}, {{ event.date|date("Y-m") }}
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="mt-3">
                        <strong>Presented at</strong>

                        <a href="{{ talk.events[0].url }}" class="mt-2 mb-2">
                            {{ talk.events[0].name }}
                        </a>
                    </p>
                {% endif %}
            </div>
        </div>
    {% endfor %}

    <div class="text-center">
        <img src="/assets/images/talk_php_russia_2019_rapper.jpg" alt="" class="img-thumbnail" style="max-height:22em">
        <p class="mt-2">
            Rapping-Ception in PHP Russia, 2019 - <a href="https://www.daveliddament.co.uk/">Thank you Dave</a> for the idea + photo!
        </p>
    </div>

    <br>
    <br>

    <div class="text-center">
        <img src="/assets/images/talk_phpday_2019.jpg?v=1" alt="Me as speaker" class="img-thumbnail mr-4 mb-3" style="max-height:18em">
        <img src="/assets/images/talk_dresden.jpg?v=1" alt="Me as speaker" class="img-thumbnail mb-3" style="max-height:18em">
        <p class="mt-2">
            Sharing know-how in Dresden PHP and PHP Day at Verona, 2019
        </p>
    </div>
</div>
