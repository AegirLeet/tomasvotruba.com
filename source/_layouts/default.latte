<!DOCTYPE html>
<html>
    <head>
        <title>{block title}{$title}{/block} | {$siteTitle}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="robots" content="index, follow">

        {*fonts*}
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400i,700&subset=latin-ext" rel="stylesheet">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link href="/assets/css/theme/webmozart/style.css" rel="stylesheet" type="text/css" />

        {*code highlighter*}
        <link href="/assets/css/style.css" rel="stylesheet" type="text/css" />

        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-capable" content="yes">

        {block additionalCss}
        {/block}

        {block socialTags}
        {/block}

        <link rel="alternate" type="application/rss+xml" href="/rss.xml" title="{$siteTitle} články" />
    </head>
    <body>
        <div class="body">
            <header class="header">
                <nav class="navbar navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <em class="fa fa-align-justify fa-fw"></em>
                                Menu
                            </a>
                        </div>

                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li n:class="isset($id) && $id === index ? active, logo">
                                    <a href="/">Tomáš Votruba</a>
                                </li>
                                <li n:class="isset($id) && $id === satisfy ? active">
                                    <a href="/reference">Spokojení klienti</a>
                                </li>
                                <li n:class="isset($id) && $id === skills ? active">
                                    <a href="/skoleni">Co vám můžu předat</a>
                                </li>
                                <li n:class="isset($id) && $id === blog ? active">
                                    <a href="/blog">Blog</a>
                                </li>
                                <li n:class="isset($id) && $id === price ? active">
                                    <a href="/cenik">Ceník</a>
                                </li>
                                <li>
                                    <a href="/#kontakt">Kontakt</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="mainContent">
                {block content_wrapper}
                    {block content}{/block}
                {/block}
            </div>
        </div>

        {* for Menu toggling *}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" async></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous" async></script>

        {* icons from FontAwesome *}
        <script src="https://use.fontawesome.com/8e94b18a91.js" async></script>

        {include "googleAnalytics"}

        {block additionalJavascript}
        {/block}
    </body>
</html>
