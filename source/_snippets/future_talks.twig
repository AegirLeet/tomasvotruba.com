{% if future_talks|length %}
    <div class="alert alert-sm alert-success mt-3">
        Meet me at

        {% for future_talk in future_talks %}
            {% if future_talk.date|date > "now"|date %}
                <a href="{{ future_talk.url }}">{{ future_talk.name }}</a> ({{ future_talk.location }}, {{ future_talk.date|date("M j") }}){% if loop.index < (length(future_talks) - 1) %}, {% elseif loop.index == (length(future_talks) - 1) %} or{% elseif loop.index == (length(future_talks)) %}.{% endif %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
