{% set relatedPosts = post|relatedItems %}

{% if relatedPosts|length %}
    <div class="card">
        <div class="card-header">
            <h3 class="text-center mt-2">Related Posts You Might Find Useful</h3>
        </div>
        <div class="card-body">
            <ul class="mt-3 list-unstyled">
                {% for relatedPost in relatedPosts %}
                    <li class="col-md-12 {% if loop.last == false %}mb-4{% endif %}">
                        <a href="/{{ relatedPost.relativeUrl }}/">{{ relatedPost.title|raw }}</a>
                        {% include "_snippets/post/postMetadataLine.twig" with { post: relatedPost } %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    {#<br>#}
    <br>
{% endif %}
