{% set relatedPosts = post|relatedItems %}

{% if relatedPosts|length %}
    <div class="card">
        <div class="card-header">
            <h3 class="text-center mt-2">
                <em class="fas fa-random"></em>
                &nbsp;
                Continue Learning
            </h3>
        </div>
        <div class="card-body mt-3">
            {% include "_snippets/post/postList.twig" with { posts: relatedPosts } %}
        </div>
    </div>

    <br>
{% endif %}
