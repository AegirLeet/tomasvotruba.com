<ul class="list-inline post-metadata">
    <li class="list-inline-item mr-3">
        <em class="fas fa-clock fa-fw"></em>
        <strong>{{ post.getReadingTimeInMinutes() }} min</strong>
    </li>

    <li class="list-inline-item mr-3">
        <em class="fas fa-calendar fa-fw"></em>
        <time datetime="{{ post.getDateInFormat('Y-m-D') }}">{{ post.getDateInFormat('l, M j, Y') }}</time>
    </li>

    {% if showCommentCount is defined %}
        <li class="list-inline-item mr-3">
            <em class="fas fa-fw fa-comments"></em>
            <a href="{{ site_url }}/{{ post.relativeUrl }}/#disqus_thread">X</a> comments
        </li>
    {% endif %}

    {% if showPullRequestLink is defined %}
        <li class="list-inline-item">
            <em class="fas fa-fw fa-edit"></em>
            <a href="{{ post|githubEditPostUrl }}">Typo? Fix me, please</a>
        </li>
    {% endif %}

    {% if post.tested is defined %}
        <li class="list-inline-item pull-right">
            {% set testDirectoryOnGithub %}{{ github_repository_tests_directory }}/Posts/Year{{ post.getDateInFormat('Y') }}/{{ post.test_slug }}{% endset %}
            <a href="{{ testDirectoryOnGithub }}" class="badge badge-success">
                <em class="fas fa-fw fa-thumbs-up"></em> Tested
            </a>
        </li>
    {% endif %}
</ul>
