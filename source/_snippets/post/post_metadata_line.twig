<ul class="list-inline post-metadata">
    <li class="list-inline-item mr-3">
        <em class="fas fa-clock fa-fw"></em>
        <strong>{{ post.getReadingTimeInMinutes() }} min</strong>
    </li>

    <li class="list-inline-item mr-3">
        <em class="fas fa-calendar fa-fw"></em>
        <time datetime="{{ post.getDateInFormat('Y-m-D') }}">
            {% if post.updated_since is defined %}<strike>{% endif %}

            {% if post.getDateInFormat('Y') == "now"|date("Y") %}
                {{ post.getDateInFormat('D, M j') }}
            {% else %}
                {{ post.getDateInFormat('D, M j, Y') }}
            {% endif %}

            {% if post.updated_since is defined %}</strike>{% endif %}
        </time>
    </li>

    {% if post.updated_since is defined %}
        <li class="list-inline-item mr-3 text-success">
            <em class="fas fa-fw fa-sync"></em> Updated {{ post.updated_since|date('M, Y') }}
        </li>
    {% endif %}

    {% if showCommentCount is defined %}
        <li class="list-inline-item mr-3">
            <em class="fas fa-fw fa-comments"></em>
            <a href="{{ site_url }}/{{ post|link }}/#disqus_thread">X</a> comments
        </li>
    {% endif %}

    {% if post.tested is defined %}
        <li class="list-inline-item mr-3 text-primary">
            {% set test_directory_on_github %}{{ github_repository_tests_directory }}/Posts/Year{{ post.getDateInFormat('Y') }}/{{ post.test_slug }}{% endset %}
            <em class="fas fa-fw fa-check-circle"></em>
            <a href="{{ test_directory_on_github }}">Tested</a>
        </li>
    {% endif %}

    <li class="list-inline-item mr-3 text-primary">
        <em class="fab fa-fw fa-github"></em>
        <a href="{{ post|github_edit_post_url }}">Edit Post</a>
    </li>
</ul>
