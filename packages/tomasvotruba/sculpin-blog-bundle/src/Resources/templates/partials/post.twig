<article class="blog-post">
    {% if post.thumbnail %}
        <img src="/images/posts/thumbnail/{{ post.thumbnail }}" class="pull-left post-thumbnail">
        <meta property="og:image" content="{{ site.url }}/images/posts/thumbnail/{{ post.thumbnail }}" />
    {% endif %}

    <header>
        <h1>
            <a href="{{ post.url }}">{{ post.title }}</a>

            {% if short is defined %}
                <a href="{{ post.url }}" class="btn btn-success pull-right">
                    {{ "post.read_on"|trans(post.lang) }}
                    <em class="fa fa-hand-o-right fa-fw"></em>
                </a>
            {% endif %}
        </h1>

        {{ include('partials/postMetadataLine.twig') }}
    </header>

    <div>
        {% if short is defined %}
            {{ post.meta.perex }}
        {% else %}
            {{ post.blocks.content|raw }}
        {% endif %}
    </div>
</article>
