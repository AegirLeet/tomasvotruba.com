<article class="blog-post">
    <header>
        <h1>
            <a href="{{ post.url }}">{{ post.title }}</a>

            {% if short is defined %}
                <a href="{{ post.url }}" class="btn btn-success pull-right">
                    {% if post.lang == "en" %}
                        Read on&nbsp;
                    {% else %}
                        Přečti si&nbsp;
                    {% endif %}
                    <em class="fa fa-hand-o-right fa-fw"></em>
                </a>
            {% endif %}
        </h1>

        {{ include('partials/postMetadataLine.twig') }}
    </header>

    <div>
        {% if short is defined %}
            {{ post.meta.perex }}
        {% else %}
            {{ post.blocks.content|raw }}
        {% endif %}
    </div>
</article>
