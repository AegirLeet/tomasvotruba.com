<article class="blog-post">
    <header>
        <h2>
            <a href="{{ post.url }}">{{ post.title }}</a>

            <a href="{{ post.url }}" class="btn btn-success pull-right">
                {% if post.lang == "en" %}
                    Read on&nbsp;
                {% else %}
                    Přečti si&nbsp;
                {% endif %}
                <em class="fa fa-hand-o-right fa-fw"></em>
            </a>
        </h2>

        <p>{{ post.meta.perex }}</p>

        {{ include('partials/postMetadataLine.twig') }}
    </header>
</article>
