<article class="blog-post">
    <img n:ifset="$post['thumbnail']" src="/images/posts/thumbnail/{$post['thumbnail']}" class="pull-left post-thumbnail hidden-xs">

    <header>
        <h1>
            <a href="{{ post.url }}">{$post['title']}</a>
        </h1>

        {{ include('partials/postMetadataLine.twig') }}
    </header>

    <div>
        {% if short is defined %}
            {{ post.meta.perex }}
        {% else %}
            {{ post.blocks.content|raw }}
        {/if}
    </div>
</article>
