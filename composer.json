{
    "name": "tomasvotruba/website",
    "require": {
        "php": "^7.1",
        "symplify/statie": "v3.0.2",
        "nette/utils": "^2.4",
        "nette/finder": "^2.4",
        "J7mbo/twitter-api-php": "^1.0",
        "nikic/php-parser": "v4.0.0alpha2"
    },
    "require-dev": {
        "symplify/easy-coding-standard": "^3.0",
        "phpunit/phpunit": "^6.5",
        "phpstan/phpstan-shim": "^0.9",
        "symfony/console": "4.0.1 as 3.4",
        "spatie/http-status-check": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\Website\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\Website\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan.phar analyse bin src tests --level max --configuration phpstan.neon",
        "check-cs": "vendor/bin/ecs check bin src tests",
        "fix-cs": [
            "vendor/bin/ecs check bin src tests --fix",
            "bin/clear_posts_trailing_whitespaces.sh"
        ],
        "check-status": [
            "vendor/bin/http-status-check scan https://tomasvotruba.cz --output invalid-links.txt"
        ]
    }
}
